{
  "compilerOptions": {
     
    "target": "es2016",                 
    // adciona algumas funcionalidades da dom para usarmos na aplicação.                
    "lib": ["dom", "dom.iterable", "esnext"],                                        
    "jsx": "react-jsx",                                
    "module": "commonjs",                                
    "moduleResolution": "node",                       
    "resolveJsonModule": true,                        
    "allowJs": true,                                  
    "noEmit": true,                                   
    "isolatedModules": true,                          
    "allowSyntheticDefaultImports": true,             
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,                
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  // indicar pro ts onde se encontra códigos na aplicação
  "include": ["src"]
}
